# Environment Configuration for Videoflix Backend
# This file serves as a template for environment variables
# Copy this file to .env and adjust the values for your environment

# =============================================================================
# BASIC DJANGO SETTINGS
# =============================================================================

# Debug mode - NEVER set to True in production
DEBUG=True

# Secret key for Django - Generate a new one for production
# You can generate a new secret key with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-key-change-this-in-production

# Allowed hosts - Add your domain(s) for production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL for production (PostgreSQL recommended)
# Example: postgresql://user:password@localhost:5432/videoflix_db
DATABASE_URL=sqlite:///db.sqlite3

# SQLite configuration (for development only)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# PostgreSQL configuration (for production)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=videoflix_db
# DB_USER=videoflix_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# =============================================================================
# REDIS CONFIGURATION (for background tasks)
# =============================================================================

REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP settings for production
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Default from email
DEFAULT_FROM_EMAIL=noreply@videoflix.com

# =============================================================================
# JWT TOKEN SETTINGS
# =============================================================================

# JWT token lifetime (in minutes)
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=10080  # 7 days

# JWT signing algorithm
JWT_ALGORITHM=HS256

# =============================================================================
# MEDIA AND STATIC FILES
# =============================================================================

# Media files settings
MEDIA_URL=/media/
STATIC_URL=/static/

# For production with cloud storage (e.g., AWS S3)
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket
# AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed CORS origins (frontend URLs)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CORS settings for production
# CORS_ALLOW_CREDENTIALS=True

# =============================================================================
# VIDEO PROCESSING SETTINGS
# =============================================================================

# FFmpeg settings
FFMPEG_BINARY_PATH=ffmpeg

# Video processing queue settings
VIDEO_PROCESSING_TIMEOUT=3600  # 1 hour
MAX_UPLOAD_SIZE=2147483648      # 2GB in bytes

# HLS settings
HLS_SEGMENT_DURATION=10         # seconds
HLS_PLAYLIST_TYPE=vod

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional)
# LOG_FILE=/var/log/videoflix/app.log

# =============================================================================
# SECURITY SETTINGS (for production)
# =============================================================================

# SSL/HTTPS settings
# SECURE_SSL_REDIRECT=True
# SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# Cookie settings
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True

# Content Security Policy
# CSP_DEFAULT_SRC="'self'"
# CSP_SCRIPT_SRC="'self' 'unsafe-inline'"
# CSP_STYLE_SRC="'self' 'unsafe-inline'"

# =============================================================================
# MONITORING AND ANALYTICS (optional)
# =============================================================================

# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Django Debug Toolbar (for development)
ENABLE_DEBUG_TOOLBAR=False

# Disable migrations in tests
# DISABLE_MIGRATIONS=True